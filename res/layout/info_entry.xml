<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#27A5F9" >
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#484E61" >
        
        <Button 
            android:id="@+id/button_back"
         	android:layout_width="30dp"
         	android:layout_height="30dp"
         	android:layout_centerVertical="true"
         	android:layout_marginLeft="10dp"
         	android:background="@drawable/home" />
        
        <TextView 
            android:text="@string/infoEntryActivity_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#fff"
            android:textSize="24sp" />       
    </RelativeLayout>
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="0dp"
      	android:layout_weight="1"
      	android:textColor="#fff"
      	android:textSize="24sp"
      	android:layout_gravity="center_horizontal"
      	android:text="@string/infoEntry_date"/>
    <DatePicker 
        android:id="@+id/datePicker_date"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_gravity="center_horizontal"
        android:calendarViewShown="false" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textColor="#fff"
        android:textSize="24sp"
      	android:layout_gravity="center_horizontal"
        android:text="@string/infoEntry_counter"/>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal">
        
        <NumberPicker
        	android:id="@+id/numberPicker_counter0"
      		android:layout_width="0dp"
      		android:layout_height="match_parent"
      		android:layout_weight="1"
      		android:tag="0" />
        <NumberPicker
        	android:id="@+id/numberPicker_counter1"
      		android:layout_width="0dp"
      		android:layout_height="match_parent"
      		android:layout_weight="1"
      		android:tag="1" />
        <NumberPicker
        	android:id="@+id/numberPicker_counter2"
      		android:layout_width="0dp"
      		android:layout_height="match_parent"
      		android:layout_weight="1"
      		android:tag="2" />
        <NumberPicker
        	android:id="@+id/numberPicker_counter3"
      		android:layout_width="0dp"
      		android:layout_height="match_parent"
      		android:layout_weight="1"
      		android:tag="3" />
        <NumberPicker
        	android:id="@+id/numberPicker_counter4"
      		android:layout_width="0dp"
      		android:layout_height="match_parent"
      		android:layout_weight="1"
      		android:tag="4" />
    </LinearLayout>
    
    <ImageButton 
        android:id="@+id/button_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:src="@drawable/button_ok"
      	android:layout_gravity="center_horizontal" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       	android:text="@string/infoEntry_button_ok"
       	android:textColor="#fff"
       	android:textSize="24sp"
       	android:layout_gravity="center_horizontal"/>
</LinearLayout>
